{
    "name": "2moons/2moons",
    "description": "2Moons - Modernized Futuristic Space Strategy Game - A complete modernization of the classic OGame clone with PHP 8.3, Twig templates, PDO database access, and futuristic UI design.",
    "type": "project",
    "license": "MIT",
    "keywords": [
        "ogame",
        "space",
        "strategy",
        "browser-game",
        "php8",
        "twig",
        "pdo",
        "futuristic",
        "scifi"
    ],
    "authors": [
        {
            "name": "Jan-Otto KrÃ¶pke",
            "email": "kroepke@outlook.com",
            "role": "Original Author"
        },
        {
            "name": "AI Assistant",
            "email": "ai@2moons.dev",
            "role": "Modernization"
        }
    ],
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": ">=8.3",
        "ext-pdo": "*",
        "ext-pdo_mysql": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-openssl": "*",
        "ext-curl": "*",
        "ext-gd": "*",
        "ext-zlib": "*",
        "twig/twig": "^3.8",
        "symfony/http-foundation": "^7.0",
        "symfony/http-kernel": "^7.0",
        "symfony/routing": "^7.0",
        "symfony/console": "^7.0",
        "symfony/process": "^7.0",
        "monolog/monolog": "^3.0",
        "vlucas/phpdotenv": "^5.6",
        "ramsey/uuid": "^4.7",
        "firebase/php-jwt": "^6.10",
        "phpmailer/phpmailer": "^6.9",
        "league/flysystem": "^3.25",
        "league/flysystem-local": "^3.0",
        "intervention/image": "^3.0",
        "guzzlehttp/guzzle": "^7.8",
        "league/csv": "^9.15",
        "nesbot/carbon": "^2.72",
        "doctrine/dbal": "^4.0",
        "doctrine/migrations": "^3.7",
        "symfony/validator": "^7.0",
        "symfony/security-core": "^7.0",
        "symfony/security-csrf": "^7.0",
        "symfony/polyfill-php83": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.8",
        "php-cs-fixer/shim": "^3.50",
        "roave/security-advisories": "dev-latest",
        "symfony/var-dumper": "^7.0",
        "symfony/debug-bundle": "^7.0",
        "symfony/web-profiler-bundle": "^7.0",
        "symfony/maker-bundle": "^1.0",
        "friendsofphp/php-cs-fixer": "^3.50",
        "vimeo/psalm": "^5.0"
    },
    "autoload": {
        "psr-4": {
            "TwoMoons\\": "src/",
            "TwoMoons\\App\\": "src/App/",
            "TwoMoons\\Core\\": "src/Core/",
            "TwoMoons\\Game\\": "src/Game/",
            "TwoMoons\\Admin\\": "src/Admin/",
            "TwoMoons\\Api\\": "src/Api/",
            "TwoMoons\\Cronjob\\": "src/Cronjob/",
            "TwoMoons\\Template\\": "src/Template/",
            "TwoMoons\\Database\\": "src/Database/",
            "TwoMoons\\Security\\": "src/Security/",
            "TwoMoons\\Utils\\": "src/Utils/"
        },
        "files": [
            "includes/constants.php",
            "includes/db.php",
            "includes/functions/GeneralFunctions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "TwoMoons\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "@php -r \"if (file_exists('vendor/autoload.php')) { require 'vendor/autoload.php'; }\""
        ],
        "post-update-cmd": [
            "@php -r \"if (file_exists('vendor/autoload.php')) { require 'vendor/autoload.php'; }\""
        ],
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "cs-check": "php-cs-fixer fix --dry-run --diff",
        "cs-fix": "php-cs-fixer fix",
        "stan": "phpstan analyse",
        "psalm": "psalm",
        "quality": [
            "@cs-check",
            "@stan",
            "@test"
        ],
        "install-game": [
            "@php install/install.php"
        ],
        "update-game": [
            "@php install/update.php"
        ],
        "clear-cache": [
            "@php -r \"if (is_dir('cache')) { array_map('unlink', glob('cache/*')); }\""
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": true,
            "symfony/flex": true,
            "symfony/runtime": true
        },
        "platform": {
            "php": "8.3"
        }
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "7.0.*"
        }
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://packagist.org"
        }
    ]
}
